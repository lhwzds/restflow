  {
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "formatter": {
      "enabled": true,
      "indentStyle": "space",  
      "indentWidth": 2,       
      "lineWidth": 80,         
      "lineEnding": "lf"        
    },
    "javascript": {
      "formatter": {
        "semicolons": "asNeeded",      
        "quoteStyle": "single",       
        "trailingCommas": "all",       
        "arrowParentheses": "always"  
      }
    },
    "files": {
      "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue",
  "src/**/*.js"]
    }
  }
