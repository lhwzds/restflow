{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RestFlow",
  "version": "0.1.0",
  "identifier": "com.restflow.app",
  "build": {
    "beforeDevCommand": {
      "script": "npm run dev",
      "cwd": "../../web"
    },
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": {
      "script": "npm run build",
      "cwd": "../../web"
    },
    "frontendDist": "../../web/dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "RestFlow",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
